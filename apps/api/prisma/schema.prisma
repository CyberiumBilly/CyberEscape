generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  SUPER_ADMIN
  ORG_ADMIN
  MANAGER
  LEARNER
}

enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
  PENDING
}

enum RoomType {
  PASSWORD_AUTH
  PHISHING
  DATA_PROTECTION
  NETWORK_SECURITY
  INSIDER_THREAT
  INCIDENT_RESPONSE
}

enum PuzzleType {
  MULTIPLE_CHOICE
  PASSWORD_STRENGTH
  PHISHING_CLASSIFICATION
  DRAG_DROP
  CODE_ENTRY
  SEQUENCE
  MATCHING
  SIMULATION
}

enum GameStatus {
  IDLE
  LOADING
  INTRO
  PUZZLE_ACTIVE
  PUZZLE_FEEDBACK
  ROOM_COMPLETE
  ROOM_FAILED
  DEBRIEF
}

enum TeamStatus {
  LOBBY
  IN_GAME
  COMPLETED
  DISBANDED
}

enum BadgeTier {
  BRONZE
  SILVER
  GOLD
  PLATINUM
  DIAMOND
}

enum BadgeCategory {
  COMPLETION
  SPEED
  ACCURACY
  STREAK
  SOCIAL
  MASTERY
  SPECIAL
}

enum AlertSeverity {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum CampaignStatus {
  DRAFT
  ACTIVE
  PAUSED
  COMPLETED
  ARCHIVED
}

enum ReportType {
  ORGANIZATION
  GROUP
  USER
  ROOM
  COMPLIANCE
  PERFORMANCE_SUMMARY
  RISK_ASSESSMENT
  EXECUTIVE_SUMMARY
}

// New enums for platform enhancement
enum DifficultyLevel {
  EASY
  NORMAL
  HARD
  EXPERT
}

enum ContentType {
  ROOM
  PUZZLE
  HINT
}

enum RiskLevel {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum AlertType {
  DEADLINE_APPROACHING
  LOW_ENGAGEMENT
  HIGH_RISK_USER
  SCORE_DROP
  COMPLETION_MILESTONE
  COMPLIANCE_WARNING
}

model Organization {
  id           String   @id @default(cuid())
  name         String
  slug         String   @unique
  logoUrl      String?
  primaryColor String   @default("#6366f1")
  domain       String?
  maxUsers     Int      @default(100)
  settings     Json     @default("{}")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  users        User[]
  groups       Group[]
  campaigns    Campaign[]
  alerts       Alert[]
  reports      Report[]
  auditLogs    AuditLog[]
  ssoConfigs   SSOConfig[]
  webhookConfigs WebhookConfig[]
  scormPackages  SCORMPackage[]

  // New relations for platform enhancement
  environment       OrganizationEnvironment?
  contentOverrides  ContentOverride[]
  featureFlags      OrganizationFeatureFlag[]
  complianceSettings ComplianceSettings?
  roomConfigurations RoomConfiguration[]
  customPuzzles     CustomPuzzle[]
  resilienceScores  OrganizationResilienceScore[]

  @@index([slug])
}

model User {
  id             String     @id @default(cuid())
  email          String     @unique
  passwordHash   String?
  firstName      String
  lastName       String
  role           UserRole   @default(LEARNER)
  status         UserStatus @default(ACTIVE)
  avatar         String?
  locale         String     @default("en")
  googleId       String?    @unique
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  lastLoginAt    DateTime?
  userGroups     UserGroup[]
  gameProgress   GameProgress[]
  puzzleAttempts PuzzleAttempt[]
  teamMembers    TeamMember[]
  stats          UserStats?
  userBadges     UserBadge[]
  userDailyChallenges UserDailyChallenge[]
  refreshTokens  RefreshToken[]
  auditLogs      AuditLog[]

  // New relations for platform enhancement
  riskScore      UserRiskScore?
  createdCustomPuzzles CustomPuzzle[]
  resourcePermissions ResourcePermission[]

  @@index([email])
  @@index([organizationId])
  @@index([googleId])
}

model Group {
  id             String   @id @default(cuid())
  name           String
  description    String?
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  userGroups     UserGroup[]

  // New relations for platform enhancement
  resilienceScores GroupResilienceScore[]

  @@index([organizationId])
}

model UserGroup {
  id         String   @id @default(cuid())
  userId     String
  groupId    String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  group      Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  assignedAt DateTime @default(now())

  @@unique([userId, groupId])
}

model Room {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String
  type        RoomType
  order       Int
  timeLimit   Int      @default(1800)
  difficulty  Int      @default(1)
  imageUrl    String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  puzzles     Puzzle[]
  gameProgress GameProgress[]

  // New relations for platform enhancement
  configurations RoomConfiguration[]
  customPuzzles  CustomPuzzle[]

  @@index([slug])
  @@index([order])
}

model Puzzle {
  id          String     @id @default(cuid())
  roomId      String
  room        Room       @relation(fields: [roomId], references: [id])
  title       String
  description String
  type        PuzzleType
  order       Int
  basePoints  Int        @default(100)
  timeLimit   Int        @default(300)
  config      Json       @default("{}")
  hints       Json       @default("[]")
  answer      Json
  explanation String?
  isActive    Boolean    @default(true)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  attempts    PuzzleAttempt[]

  @@index([roomId, order])
}

model GameProgress {
  id            String     @id @default(cuid())
  userId        String
  user          User       @relation(fields: [userId], references: [id])
  roomId        String
  room          Room       @relation(fields: [roomId], references: [id])
  status        GameStatus @default(IDLE)
  score         Int        @default(0)
  timeSpent     Int        @default(0)
  currentPuzzle Int        @default(0)
  hintsUsed     Int        @default(0)
  startedAt     DateTime?
  completedAt   DateTime?
  metadata      Json       @default("{}")
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  @@unique([userId, roomId])
  @@index([userId])
  @@index([roomId])
}

model PuzzleAttempt {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  puzzleId  String
  puzzle    Puzzle   @relation(fields: [puzzleId], references: [id])
  answer    Json
  isCorrect Boolean
  score     Int      @default(0)
  timeSpent Int      @default(0)
  hintsUsed Int      @default(0)
  createdAt DateTime @default(now())

  @@index([userId, puzzleId])
}

model Team {
  id        String     @id @default(cuid())
  name      String
  joinCode  String     @unique
  status    TeamStatus @default(LOBBY)
  maxSize   Int        @default(4)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  members   TeamMember[]
  sessions  TeamSession[]

  @@index([joinCode])
}

model TeamMember {
  id       String   @id @default(cuid())
  teamId   String
  team     Team     @relation(fields: [teamId], references: [id], onDelete: Cascade)
  userId   String
  user     User     @relation(fields: [userId], references: [id])
  role     String   @default("member")
  isReady  Boolean  @default(false)
  joinedAt DateTime @default(now())

  @@unique([teamId, userId])
}

model TeamSession {
  id          String   @id @default(cuid())
  teamId      String
  team        Team     @relation(fields: [teamId], references: [id])
  roomId      String
  score       Int      @default(0)
  timeSpent   Int      @default(0)
  startedAt   DateTime @default(now())
  completedAt DateTime?
  metadata    Json     @default("{}")

  @@index([teamId])
}

model UserStats {
  id              String    @id @default(cuid())
  userId          String    @unique
  user            User      @relation(fields: [userId], references: [id])
  totalScore      Int       @default(0)
  roomsCompleted  Int       @default(0)
  puzzlesSolved   Int       @default(0)
  totalTimePlayed Int       @default(0)
  currentStreak   Int       @default(0)
  longestStreak   Int       @default(0)
  accuracy        Float     @default(0)
  lastPlayedAt    DateTime?
  updatedAt       DateTime  @updatedAt

  @@index([totalScore])
}

model Badge {
  id          String        @id @default(cuid())
  name        String        @unique
  description String
  icon        String
  tier        BadgeTier
  category    BadgeCategory
  criteria    Json
  points      Int           @default(0)
  isActive    Boolean       @default(true)
  createdAt   DateTime      @default(now())
  userBadges  UserBadge[]

  @@index([category])
}

model UserBadge {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  badgeId   String
  badge     Badge    @relation(fields: [badgeId], references: [id])
  awardedAt DateTime @default(now())

  @@unique([userId, badgeId])
}

model DailyChallenge {
  id          String   @id @default(cuid())
  title       String
  description String
  puzzleConfig Json
  bonusPoints Int      @default(50)
  activeDate  DateTime @unique
  createdAt   DateTime @default(now())
  userDailyChallenges UserDailyChallenge[]

  @@index([activeDate])
}

model UserDailyChallenge {
  id               String         @id @default(cuid())
  userId           String
  user             User           @relation(fields: [userId], references: [id])
  dailyChallengeId String
  dailyChallenge   DailyChallenge @relation(fields: [dailyChallengeId], references: [id])
  completed        Boolean        @default(false)
  score            Int            @default(0)
  completedAt      DateTime?

  @@unique([userId, dailyChallengeId])
}

model Campaign {
  id             String         @id @default(cuid())
  name           String
  description    String?
  organizationId String
  organization   Organization   @relation(fields: [organizationId], references: [id])
  status         CampaignStatus @default(DRAFT)
  startDate      DateTime?
  endDate        DateTime?
  targetRooms    Json           @default("[]")
  targetGroups   Json           @default("[]")
  settings       Json           @default("{}")
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  @@index([organizationId])
}

model Alert {
  id             String        @id @default(cuid())
  organizationId String
  organization   Organization  @relation(fields: [organizationId], references: [id])
  title          String
  message        String
  severity       AlertSeverity
  isAcknowledged Boolean       @default(false)
  acknowledgedBy String?
  acknowledgedAt DateTime?
  metadata       Json          @default("{}")
  createdAt      DateTime      @default(now())

  @@index([organizationId, isAcknowledged])
}

model AuditLog {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  userId         String?
  user           User?        @relation(fields: [userId], references: [id])
  action         String
  resource       String
  resourceId     String?
  details        Json         @default("{}")
  ipAddress      String?
  createdAt      DateTime     @default(now())

  @@index([organizationId, createdAt])
  @@index([userId])
}

model Report {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  type           ReportType
  title          String
  data           Json
  generatedAt    DateTime     @default(now())

  @@index([organizationId, type])
}

model RefreshToken {
  id        String    @id @default(cuid())
  token     String    @unique
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime  @default(now())
  revokedAt DateTime?

  @@index([token])
  @@index([userId])
}

model SSOConfig {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  provider       String
  clientId       String
  clientSecret   String
  domain         String?
  isActive       Boolean      @default(false)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@unique([organizationId, provider])
}

model WebhookConfig {
  id              String       @id @default(cuid())
  organizationId  String
  organization    Organization @relation(fields: [organizationId], references: [id])
  url             String
  events          Json         @default("[]")
  secret          String
  isActive        Boolean      @default(true)
  lastTriggeredAt DateTime?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  @@index([organizationId])
}

model SCORMPackage {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id])
  name           String
  version        String       @default("2004")
  roomIds        Json         @default("[]")
  packageUrl     String?
  generatedAt    DateTime     @default(now())

  @@index([organizationId])
}

// ============================================
// NEW MODELS FOR PLATFORM ENHANCEMENT
// ============================================

// Permission System
model Permission {
  id          String   @id @default(cuid())
  name        String   @unique  // e.g., "users:read", "analytics:export"
  description String
  category    String   // e.g., "users", "analytics", "organizations"
  createdAt   DateTime @default(now())

  rolePermissions RolePermission[]

  @@index([category])
}

// Resource-level ACL for fine-grained access control
model ResourcePermission {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  resourceType String   // "group", "room", "report", "campaign"
  resourceId   String
  permission   String   // "read", "write", "manage"
  grantedBy    String?
  createdAt    DateTime @default(now())

  @@unique([userId, resourceType, resourceId, permission])
  @@index([userId])
  @@index([resourceType, resourceId])
}

model RolePermission {
  id           String     @id @default(cuid())
  role         UserRole
  permissionId String
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)
  createdAt    DateTime   @default(now())

  @@unique([role, permissionId])
  @@index([role])
}

// Organization Environment & Customization
model OrganizationEnvironment {
  id             String       @id @default(cuid())
  organizationId String       @unique
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  // Theme settings
  themePrimaryColor   String  @default("#6366f1")
  themeSecondaryColor String  @default("#8b5cf6")
  themeMode           String  @default("light") // light, dark, auto
  customCss           String?

  // Game settings
  defaultDifficulty   DifficultyLevel @default(NORMAL)
  allowHints          Boolean         @default(true)
  maxHintsPerPuzzle   Int             @default(3)
  showLeaderboard     Boolean         @default(true)
  allowRetries        Boolean         @default(true)
  maxRetriesPerPuzzle Int             @default(3)
  timeLimitMultiplier Float           @default(1.0)

  // Gamification toggles
  enableBadges       Boolean @default(true)
  enableStreaks      Boolean @default(true)
  enableXP           Boolean @default(true)
  enableLeaderboards Boolean @default(true)
  enableTeamMode     Boolean @default(true)

  // Communication settings
  welcomeMessage   String?
  completionMessage String?
  customTerminology Json    @default("{}") // e.g., {"room": "module", "puzzle": "challenge"}

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ContentOverride {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  contentType    ContentType
  contentId      String       // ID of Room, Puzzle, or Hint
  field          String       // Which field to override (e.g., "title", "description")
  originalValue  String?      // Original value for reference
  overrideValue  String       // The overridden value
  isActive       Boolean      @default(true)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@unique([organizationId, contentType, contentId, field])
  @@index([organizationId, contentType])
}

model OrganizationFeatureFlag {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  featureKey     String       // e.g., "team_mode", "advanced_analytics", "custom_puzzles"
  enabled        Boolean      @default(false)
  config         Json         @default("{}") // Feature-specific configuration
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@unique([organizationId, featureKey])
  @@index([organizationId])
}

model ComplianceSettings {
  id             String       @id @default(cuid())
  organizationId String       @unique
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  // Training requirements
  trainingDeadlineDays  Int      @default(30)   // Days from assignment to complete
  requiredRooms         Json     @default("[]") // Array of RoomType values that must be completed
  minimumPassScore      Int      @default(70)   // Minimum score to pass (percentage)
  requireAllPuzzles     Boolean  @default(true) // Must complete all puzzles in required rooms

  // Recertification
  recertificationEnabled  Boolean @default(false)
  recertificationMonths   Int     @default(12) // Months before recertification required

  // Certificates
  certificatesEnabled     Boolean @default(true)
  certificateTemplate     String? // Custom template ID or URL
  certificateSignatory    String? // Name to appear on certificate
  certificateSignatoryTitle String? // Title of signatory

  // Reminders
  reminderDays            Json    @default("[7, 3, 1]") // Days before deadline to send reminders
  escalationEnabled       Boolean @default(false)
  escalationDays          Int     @default(7)  // Days after deadline to escalate

  // Compliance reporting
  complianceOfficerEmail  String?
  weeklyReportEnabled     Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RoomConfiguration {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  roomId         String
  room           Room         @relation(fields: [roomId], references: [id], onDelete: Cascade)

  // Enable/disable
  enabled         Boolean         @default(true)

  // Overrides
  customTimeLimit Int?            // Override default time limit (seconds)
  customDifficulty DifficultyLevel?
  customOrder     Int?            // Override display order for this org

  // Unlock requirements
  unlockAfterRooms Json           @default("[]") // Room IDs that must be completed first
  unlockDate       DateTime?       // Specific date to unlock

  // Settings
  customSettings   Json           @default("{}") // Room-specific settings

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([organizationId, roomId])
  @@index([organizationId])
}

model CustomPuzzle {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  roomId         String
  room           Room         @relation(fields: [roomId], references: [id], onDelete: Cascade)
  createdById    String
  createdBy      User         @relation(fields: [createdById], references: [id])

  title          String
  description    String
  type           PuzzleType
  order          Int          @default(0)
  basePoints     Int          @default(100)
  timeLimit      Int          @default(300)
  config         Json         @default("{}")
  hints          Json         @default("[]")
  answer         Json
  explanation    String?
  isActive       Boolean      @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([organizationId, roomId])
}

// Resilience Scoring System
model OrganizationResilienceScore {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  // Overall score (0-100)
  overallScore       Float

  // Component scores (each 0-100)
  completionScore    Float    // Based on training completion rate
  performanceScore   Float    // Based on average puzzle performance

  // Detailed metrics
  totalUsers         Int
  activeUsers        Int
  completedUsers     Int
  averageAccuracy    Float
  averageTimeSpent   Int      // seconds

  // Risk breakdown
  lowRiskCount       Int      @default(0)
  mediumRiskCount    Int      @default(0)
  highRiskCount      Int      @default(0)
  criticalRiskCount  Int      @default(0)

  // Period tracking
  periodStart        DateTime
  periodEnd          DateTime
  calculatedAt       DateTime @default(now())

  @@index([organizationId, calculatedAt])
  @@index([periodEnd])
}

model GroupResilienceScore {
  id        String   @id @default(cuid())
  groupId   String
  group     Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)

  // Scores
  overallScore       Float
  completionScore    Float
  performanceScore   Float

  // Metrics
  totalUsers         Int
  completedUsers     Int
  averageAccuracy    Float

  // Risk breakdown
  lowRiskCount       Int      @default(0)
  mediumRiskCount    Int      @default(0)
  highRiskCount      Int      @default(0)
  criticalRiskCount  Int      @default(0)

  // Period tracking
  periodStart        DateTime
  periodEnd          DateTime
  calculatedAt       DateTime @default(now())

  @@index([groupId, calculatedAt])
}

model UserRiskScore {
  id        String    @id @default(cuid())
  userId    String    @unique
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  riskLevel RiskLevel @default(LOW)
  riskScore Int       @default(0)  // 0-100, higher = more risk

  // Risk factors (stored as JSON for flexibility)
  // Factors: incomplete_training (+30), low_phishing (+25), inactive (+20), low_performance (+15), multiple_failures (+10)
  riskFactors Json    @default("[]")

  // Breakdown scores
  trainingCompletion  Float  @default(0)  // 0-100
  phishingScore       Float  @default(0)  // 0-100
  engagementScore     Float  @default(0)  // 0-100
  performanceScore    Float  @default(0)  // 0-100

  // Activity tracking
  lastActivityAt      DateTime?
  daysSinceActivity   Int    @default(0)

  calculatedAt DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([riskLevel])
  @@index([calculatedAt])
}

// Scheduled Reports
model ScheduledReport {
  id             String       @id @default(cuid())
  organizationId String
  title          String
  reportType     ReportType
  format         String       @default("pdf")  // pdf, csv, json
  schedule       String       // cron expression
  recipients     Json         @default("[]")   // Array of email addresses
  filters        Json         @default("{}")   // Report filters
  lastRunAt      DateTime?
  nextRunAt      DateTime?
  isActive       Boolean      @default(true)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@index([organizationId])
  @@index([nextRunAt])
}
